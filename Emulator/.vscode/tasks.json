{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Monster8 (Debug)",
            "type": "shell",
            "windows": {
                "command": "mingw32-make",
                "args": ["debug"]
            },
            "linux": {
                "command": "make",
                "args": ["debug"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Monster8 (Release)",
            "type": "shell",
            "windows": {
                "command": "mingw32-make",
                "args": ["release"]
            },
            "linux": {
                "command": "make",
                "args": ["release"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "windows": {
                "command": "mingw32-make",
                "args": ["clean"]
            },
            "linux": {
                "command": "make",
                "args": ["clean"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run (Release)",
            "type": "shell",
            "windows": {
                "command": "mingw32-make release && .\\Monster8.exe"
            },
            "linux": {
                "command": "make release && ./Monster8"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}