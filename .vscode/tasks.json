{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Monster8Editor (Debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
                "args": ["--debug"]
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--debug"]
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--debug"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Monster8Editor (Release)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
                "args": ["--release"]
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--release"]
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--release"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Monster8Editor (Debug - MSYS2)",
            "type": "shell",
            "command": "C:\\msys64\\msys2_shell.cmd",
            "args": [
                "-mingw64",
                "-defterm",
                "-no-start",
                "-here",
                "-c",
                "make debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Monster8Editor (Release - MSYS2)",
            "type": "shell",
            "command": "C:\\msys64\\msys2_shell.cmd",
            "args": [
                "-mingw64",
                "-defterm",
                "-no-start",
                "-here",
                "-c",
                "make release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Current Build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean All Builds",
            "type": "shell",
            "command": "make",
            "args": [
                "clean-all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Info",
            "type": "shell",
            "command": "make",
            "args": [
                "info"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}