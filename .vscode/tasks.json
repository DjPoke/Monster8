{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Monster8Editor (Debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
                "args": ["--debug"]
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--debug"]
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--debug"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Monster8Editor (Release)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
                "args": ["--release"]
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--release"]
            },
            "osx": {
                "command": "${workspaceFolder}/build.sh",
                "args": ["--release"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "-B",
                    "${workspaceFolder}/build",
                    "-DCMAKE_BUILD_TYPE=Debug",
                    "-G",
                    "Ninja"
                ]
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "-B",
                    "${workspaceFolder}/build",
                    "-DCMAKE_BUILD_TYPE=Debug"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "-B",
                    "${workspaceFolder}/build",
                    "-DCMAKE_BUILD_TYPE=Release",
                    "-G",
                    "Ninja"
                ]
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "-B",
                    "${workspaceFolder}/build",
                    "-DCMAKE_BUILD_TYPE=Release"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j",
                "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "windows": {
                "command": "if",
                "args": [
                    "exist",
                    "build",
                    "rmdir",
                    "/s",
                    "/q",
                    "build"
                ]
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "build"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Monster8Editor",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/Monster8Editor.exe"
            },
            "linux": {
                "command": "${workspaceFolder}/Monster8Editor"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}